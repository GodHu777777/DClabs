// general purpose registers
reg CP;
// wires                                               
wire Q0;
wire Q1;
wire Q2;
wire Q3;

wire sampler;                             

// assign statements (if any)                          
fourBitCounterAsync i1 (
// port map - connection between master ports and signals/registers   
	.CP(CP),
	.Q0(Q0),
	.Q1(Q1),
	.Q2(Q2),
	.Q3(Q3)
);

// CP
always
begin
	CP = 1'b0;
	CP = #20000 1'b1;
	#20000;
end 

fourBitCounterAsync_vlg_sample_tst tb_sample (
	.CP(CP),
	.sampler_tx(sampler)
);

fourBitCounterAsync_vlg_check_tst tb_out(
	.Q0(Q0),
	.Q1(Q1),
